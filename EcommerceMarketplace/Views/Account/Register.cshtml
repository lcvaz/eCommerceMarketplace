@model RegisterViewModel

@{
    ViewData["Title"] = "Cadastro";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <!-- Avatar/Logo -->
                    <div class="text-center mb-4">
                        <div class="bg-dark text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 2rem;">
                            <i class="bi bi-person-plus"></i>
                        </div>
                        <h2 class="mt-3">Criar Conta</h2>
                    </div>

                    <form asp-action="Register" asp-controller="Account" method="post">
                        <!-- Erros Gerais -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Tipo de Acesso (Cards como no protótipo) -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Tipo de acesso</label>
                            <div class="row g-3">
                                <div class="col-6">
                                    <input type="radio" class="btn-check" name="AccountType" id="cliente" value="Cliente" checked autocomplete="off" asp-for="AccountType">
                                    <label class="btn btn-outline-dark w-100 p-3" for="cliente">
                                        <i class="bi bi-person d-block fs-3"></i>
                                        <strong>Cliente</strong>
                                        <small class="d-block text-muted">Comprar produtos</small>
                                    </label>
                                </div>
                                <div class="col-6">
                                    <input type="radio" class="btn-check" name="AccountType" id="vendedor" value="Vendedor" autocomplete="off" asp-for="AccountType">
                                    <label class="btn btn-outline-dark w-100 p-3" for="vendedor">
                                        <i class="bi bi-shop d-block fs-3"></i>
                                        <strong>Vendedor</strong>
                                        <small class="d-block text-muted">Vender produtos</small>
                                    </label>
                                </div>
                            </div>
                            <span asp-validation-for="AccountType" class="text-danger"></span>
                        </div>

                        <!-- Nome Completo -->
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Nome Completo</label>
                            <input asp-for="FullName" class="form-control form-control-lg" placeholder="João Silva" autofocus />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="seu@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- CPF -->
                        <div class="mb-3">
                            <label asp-for="CPF" class="form-label">CPF (opcional)</label>
                            <input asp-for="CPF" class="form-control form-control-lg" placeholder="000.000.000-00" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>

                        <!-- Senha -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Senha</label>
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">Mínimo 8 caracteres</small>
                        </div>

                        <!-- Confirmar Senha -->
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmar Senha</label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="••••••••" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Botão Cadastrar -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-dark btn-lg">
                                Cadastrar
                            </button>
                        </div>
                    </form>

                    <hr>

                    <!-- Link para Login -->
                    <div class="text-center">
                        <p class="mb-0">
                            Já tem uma conta? 
                            <a asp-action="Login" class="text-decoration-none fw-bold">
                                Entre aqui
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
