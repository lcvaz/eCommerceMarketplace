@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <h1>Descubra produtos únicos</h1>
        <p>Explore nossa coleção exclusiva de produtos artesanais e autênticos, selecionados especialmente para você</p>
        <a href="#" class="btn-hero">Explorar Coleções</a>
    </div>
</section>

<!-- Categories Section -->
<section class="categories-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-12 col-md-6 col-lg-3">
                <div class="category-card">
                    <h3>Cadernos</h3>
                    <a href="#" class="category-link">Ver tudo</a>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="category-card">
                    <h3>Papéis de presente</h3>
                    <a href="#" class="category-link">Ver tudo</a>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="category-card">
                    <h3>Cartões</h3>
                    <a href="#" class="category-link">Ver tudo</a>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="category-card">
                    <h3>Impressões</h3>
                    <a href="#" class="category-link">Ver tudo</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Products Section -->
<section class="products-section">
    <div class="container">
        <div class="section-title">
            <h2>Produtos em destaque</h2>
        </div>
        <p class="section-subtitle">Selecionados especialmente para você</p>

        <div class="row g-4">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="product-card">
                        <!-- Imagem do produto - NÃO clicável conforme solicitado -->
                        <div class="product-image">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.Name" />
                            }
                            else
                            {
                                <i class="bi bi-image"></i>
                            }
                        </div>
                        
                        <!-- Área clicável - tudo exceto a imagem -->
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="product-info-link">
                            <div class="product-info">
                                <div class="product-category">@(product.Category?.Name ?? "Sem categoria")</div>
                                <h3 class="product-title">@product.Name</h3>
                                <p class="product-description">
                                    @if (!string.IsNullOrEmpty(product.Description))
                                    {
                                        @(product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)
                                    }
                                </p>
                                <div class="product-footer">
                                    <span class="product-price">@product.Price.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</span>
                                    <button type="button" class="btn-add-cart" onclick="event.preventDefault(); event.stopPropagation(); alert('Adicionar ao carrinho');">
                                        Adicionar
                                    </button>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>