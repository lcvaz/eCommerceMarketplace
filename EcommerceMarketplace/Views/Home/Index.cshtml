@{
    ViewData["Title"] = "Lou Papelaria - Home";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <h1>Descubra produtos únicos</h1>
        <p>Explore nossa coleção exclusiva de produtos artesanais e autênticos, selecionados especialmente para você</p>
        <a href="#" class="btn-hero">Explorar Coleções</a>
    </div>
</section>

<!-- Categories Section -->
<section class="categories-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-12 col-md-6 col-lg-3">
                <div class="category-card">
                    <h3>Cadernos</h3>
                    <a href="#" class="category-link">Ver tudo</a>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="category-card">
                    <h3>Papéis de presente</h3>
                    <a href="#" class="category-link">Ver tudo</a>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="category-card">
                    <h3>Cartões</h3>
                    <a href="#" class="category-link">Ver tudo</a>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="category-card">
                    <h3>Impressões</h3>
                    <a href="#" class="category-link">Ver tudo</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Products Section -->
<section class="products-section">
    <div class="container">
        <div class="section-title">
            <h2>Produtos em destaque</h2>
        </div>
        <p class="section-subtitle">Selecionados especialmente para você</p>

        <div class="row g-4">
            <!-- Produto 1 -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="product-card">
                    <div class="product-image">
                        <i class="bi bi-image"></i>
                    </div>
                    <div class="product-info">
                        <div class="product-category">Cadernos</div>
                        <h3 class="product-title">Caderno Minimalista A5</h3>
                        <p class="product-description">Caderno com capa em tons pastéis. 120 páginas. Perfeito para anotações diárias...</p>
                        <div class="product-footer">
                            <span class="product-price">R$ 35,90</span>
                            <button class="btn-add-cart">Adicionar</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Produto 2 -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="product-card">
                    <div class="product-image">
                        <i class="bi bi-image"></i>
                    </div>
                    <div class="product-info">
                        <div class="product-category">Papéis de presente</div>
                        <h3 class="product-title">Papel de Presente Botânico</h3>
                        <p class="product-description">Papel reciclado com estampas de folhas. Sustentável e elegante para todos os tip...</p>
                        <div class="product-footer">
                            <span class="product-price">R$ 12,50</span>
                            <button class="btn-add-cart">Adicionar</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Produto 3 -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="product-card">
                    <div class="product-image">
                        <i class="bi bi-image"></i>
                    </div>
                    <div class="product-info">
                        <div class="product-category">Cartões</div>
                        <h3 class="product-title">Kit Cartões Florais</h3>
                        <p class="product-description">Conjunto com 6 cartões e envelopes. Designs florais exclusivos pintados à mão.</p>
                        <div class="product-footer">
                            <span class="product-price">R$ 28,00</span>
                            <button class="btn-add-cart">Adicionar</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Produto 4 -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="product-card">
                    <div class="product-image">
                        <i class="bi bi-image"></i>
                    </div>
                    <div class="product-info">
                        <div class="product-category">Impressões</div>
                        <h3 class="product-title">Impressão Abstract Art</h3>
                        <p class="product-description">Arte abstrata em papel algodão 300g. Peça única para decoração sofisticada.</p>
                        <div class="product-footer">
                            <span class="product-price">R$ 45,00</span>
                            <button class="btn-add-cart">Adicionar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
