@{
    ViewData["Title"] = "Pagamento Já Confirmado";
}

<!--
    VIEW - PAGAMENTO JÁ CONFIRMADO

    Exibida quando o cliente tenta usar um link de confirmação que já foi usado.

    DADOS RECEBIDOS VIA VIEWBAG:
    - ViewBag.ErrorMessage: Mensagem informando quando foi confirmado
    - ViewBag.OrderNumber: Número do pedido
-->

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Ícone de Informação -->
            <div class="text-center mb-4">
                <div class="mb-3">
                    <i class="bi bi-info-circle-fill text-info" style="font-size: 6rem;"></i>
                </div>
                <h1 class="display-5 mb-3">Pagamento Já Confirmado</h1>
                <p class="lead text-muted">@ViewBag.ErrorMessage</p>
            </div>

            <!-- Card com Informações do Pedido -->
            <div class="card shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-box-seam me-2"></i>Informações do Pedido
                    </h5>
                    <p class="mb-2">
                        <strong>Número do Pedido:</strong> @ViewBag.OrderNumber
                    </p>
                    <p class="mb-0">
                        Seu pedido já está sendo processado. Você pode acompanhar o status na área "Meus Pedidos".
                    </p>
                </div>
            </div>

            <!-- Botões de Ação -->
            <div class="d-flex gap-3 justify-content-center">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-dark btn-lg">
                    <i class="bi bi-house-door me-2"></i>Voltar ao Início
                </a>
                <a href="@Url.Action("Index", "Order")" class="btn btn-dark btn-lg">
                    <i class="bi bi-box-seam me-2"></i>Meus Pedidos
                </a>
            </div>

        </div>
    </div>
</div>
