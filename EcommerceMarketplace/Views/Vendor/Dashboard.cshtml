@{
    ViewData["Title"] = "Dashboard - Vendedor";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">Dashboard do Vendedor</h1>
            <p class="lead text-muted">Bem-vindo ao seu painel de controle</p>
        </div>
    </div>

    <!-- Cards de Estatísticas -->
    <div class="row g-4 mb-5">
        <!-- Total de Lojas -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-shop text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Minhas Lojas</h6>
                            <h2 class="mb-0">@ViewBag.TotalStores</h2>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="MyStores" class="btn btn-sm btn-outline-primary w-100">
                        <i class="bi bi-eye"></i> Ver Lojas
                    </a>
                </div>
            </div>
        </div>

        <!-- Total de Produtos -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-box-seam text-success" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Meus Produtos</h6>
                            <h2 class="mb-0">@ViewBag.TotalProducts</h2>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="MyProducts" class="btn btn-sm btn-outline-success w-100">
                        <i class="bi bi-eye"></i> Ver Produtos
                    </a>
                </div>
            </div>
        </div>

        <!-- Total de Pedidos -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-cart-check text-info" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Pedidos</h6>
                            <h2 class="mb-0">@ViewBag.TotalOrders</h2>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="#" class="btn btn-sm btn-outline-info w-100">
                        <i class="bi bi-eye"></i> Ver Pedidos
                    </a>
                </div>
            </div>
        </div>

        <!-- Receita Total -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-currency-dollar text-warning" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Receita Total</h6>
                            <h2 class="mb-0">R$ @ViewBag.TotalRevenue.ToString("N2")</h2>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="#" class="btn btn-sm btn-outline-warning w-100">
                        <i class="bi bi-graph-up"></i> Ver Relatório
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Ações Rápidas -->
    <div class="row mb-5">
        <div class="col-12">
            <h3 class="mb-3">Ações Rápidas</h3>
            <div class="d-flex gap-3 flex-wrap">
                <a asp-action="CreateStore" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> Criar Nova Loja
                </a>
                <a asp-action="CreateProduct" class="btn btn-success btn-lg">
                    <i class="bi bi-plus-circle"></i> Adicionar Produto
                </a>
                <a asp-action="MyProducts" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-list"></i> Ver Meus Produtos
                </a>
                <a asp-action="MyStores" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-shop"></i> Ver Minhas Lojas
                </a>
            </div>
        </div>
    </div>

    <!-- Lista de Lojas -->
    @if (ViewBag.Stores != null && ViewBag.Stores.Count > 0)
    {
        <div class="row">
            <div class="col-12">
                <h3 class="mb-3">Minhas Lojas</h3>
                <div class="row g-4">
                    @foreach (var store in ViewBag.Stores)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="card-title mb-0">@store.Name</h5>
                                        @switch (store.Status)
                                        {
                                            case EcommerceMarketplace.Enums.StoreStatus.Active:
                                                <span class="badge bg-success">Ativa</span>
                                                break;
                                            case EcommerceMarketplace.Enums.StoreStatus.Inactive:
                                                <span class="badge bg-danger">Inativa</span>
                                                break;
                                            case EcommerceMarketplace.Enums.StoreStatus.Suspended:
                                                <span class="badge bg-warning">Suspensa</span>
                                                break;
                                        }
                                    </div>
                                    <p class="card-text text-muted">@store.Description</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="bi bi-box-seam"></i> @store.Products.Count produtos
                                        </small>
                                        <a asp-action="EditStore" asp-route-id="@store.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Você ainda não tem lojas. <a asp-action="CreateStore" class="alert-link">Crie sua primeira loja agora!</a>
                </div>
            </div>
        </div>
    }
</div>
