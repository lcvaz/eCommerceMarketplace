@model EcommerceMarketplace.Models.Product
@{
    ViewData["Title"] = "Editar Produto";
    var stores = ViewBag.Stores as List<EcommerceMarketplace.Models.Store>;
    var categories = ViewBag.Categories as List<EcommerceMarketplace.Models.Category>;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-pencil"></i> Editar Produto: @Model.Name
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditProduct" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <!-- Coluna Esquerda -->
                            <div class="col-md-6">
                                <!-- Nome do Produto -->
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">
                                        Nome do Produto <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <!-- SKU -->
                                <div class="mb-3">
                                    <label asp-for="SKU" class="form-label">
                                        SKU (Código do Produto) <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="SKU" class="form-control" />
                                    <span asp-validation-for="SKU" class="text-danger"></span>
                                </div>

                                <!-- Loja -->
                                <div class="mb-3">
                                    <label asp-for="StoreId" class="form-label">
                                        Loja <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="StoreId" class="form-select">
                                        @if (stores != null)
                                        {
                                            @foreach (var store in stores)
                                            {
                                                <option value="@store.Id">@store.Name</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="StoreId" class="text-danger"></span>
                                </div>

                                <!-- Categoria -->
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label">Categoria</label>
                                    <select asp-for="CategoryId" class="form-select">
                                        <option value="">Sem categoria</option>
                                        @if (categories != null)
                                        {
                                            @foreach (var category in categories)
                                            {
                                                <option value="@category.Id">@category.Name</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Coluna Direita -->
                            <div class="col-md-6">
                                <!-- Preço -->
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label">
                                        Preço (R$) <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">R$</span>
                                        <input asp-for="Price" class="form-control" type="number" step="0.01" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>

                                <!-- Estoque -->
                                <div class="mb-3">
                                    <label asp-for="Stock" class="form-label">
                                        Quantidade em Estoque <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Stock" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>

                                <!-- URL da Imagem -->
                                <div class="mb-3">
                                    <label asp-for="ImageUrl" class="form-label">
                                        URL da Imagem <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="ImageUrl" class="form-control" />
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <div class="mt-2">
                                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-height: 150px;">
                                        </div>
                                    }
                                </div>

                                <!-- Status -->
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">Status</label>
                                    <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<EcommerceMarketplace.Enums.ProductStatus>()">
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Descrição (largura completa) -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Descrição do Produto</label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="text-muted">Máximo 2000 caracteres</small>
                        </div>

                        <!-- Informações -->
                        <div class="alert alert-light">
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> Criado em: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <i class="bi bi-pencil-square"></i> Modificado em: @Model.ModifiedAt.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- Botões -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="MyProducts" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
