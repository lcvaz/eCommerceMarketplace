@model EcommerceMarketplace.Models.Product
@{
    ViewData["Title"] = "Adicionar Produto";
    var stores = ViewBag.Stores as List<EcommerceMarketplace.Models.Store>;
    var categories = ViewBag.Categories as List<EcommerceMarketplace.Models.Category>;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Adicionar Novo Produto
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="CreateProduct" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <!-- Coluna Esquerda -->
                            <div class="col-md-6">
                                <!-- Nome do Produto -->
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">
                                        Nome do Produto <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control" placeholder="Ex: Caderno Universitário 10 Matérias" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <!-- SKU -->
                                <div class="mb-3">
                                    <label asp-for="SKU" class="form-label">
                                        SKU (Código do Produto) <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="SKU" class="form-control" placeholder="Ex: CAD-UNI-10M-001" />
                                    <span asp-validation-for="SKU" class="text-danger"></span>
                                    <small class="text-muted">Código único para identificar o produto</small>
                                </div>

                                <!-- Loja -->
                                <div class="mb-3">
                                    <label asp-for="StoreId" class="form-label">
                                        Loja <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="StoreId" class="form-select">
                                        <option value="">Selecione a loja...</option>
                                        @if (stores != null)
                                        {
                                            @foreach (var store in stores)
                                            {
                                                <option value="@store.Id">@store.Name</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="StoreId" class="text-danger"></span>
                                </div>

                                <!-- Categoria -->
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label">Categoria</label>
                                    <select asp-for="CategoryId" class="form-select">
                                        <option value="">Sem categoria</option>
                                        @if (categories != null)
                                        {
                                            @foreach (var category in categories)
                                            {
                                                <option value="@category.Id">@category.Name</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Coluna Direita -->
                            <div class="col-md-6">
                                <!-- Preço -->
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label">
                                        Preço (R$) <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">R$</span>
                                        <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0,00" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>

                                <!-- Estoque -->
                                <div class="mb-3">
                                    <label asp-for="Stock" class="form-label">
                                        Quantidade em Estoque <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Stock" class="form-control" type="number" min="0" placeholder="0" />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>

                                <!-- URL da Imagem -->
                                <div class="mb-3">
                                    <label asp-for="ImageUrl" class="form-label">
                                        URL da Imagem <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="ImageUrl" class="form-control" placeholder="https://exemplo.com/produto.jpg" />
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    <small class="text-muted">URL da imagem principal do produto</small>
                                </div>

                                <!-- Status -->
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">Status</label>
                                    <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<EcommerceMarketplace.Enums.ProductStatus>()">
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Descrição (largura completa) -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Descrição do Produto</label>
                            <textarea asp-for="Description" class="form-control" rows="5"
                                      placeholder="Descreva as características, benefícios e especificações do produto..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="text-muted">Máximo 2000 caracteres</small>
                        </div>

                        <!-- Botões -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="MyProducts" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Adicionar Produto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
