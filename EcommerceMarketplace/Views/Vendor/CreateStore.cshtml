@model EcommerceMarketplace.Models.Store
@{
    ViewData["Title"] = "Criar Nova Loja";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-shop"></i> Criar Nova Loja
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateStore" method="post">
                        @Html.AntiForgeryToken()

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Preencha as informações da sua loja. Você poderá editar depois.
                        </div>

                        <!-- Nome da Loja -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                Nome da Loja <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Ex: Papelaria São João" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Descrição -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Descrição</label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Descreva sua loja e os produtos que você vende..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="text-muted">Máximo 500 caracteres</small>
                        </div>

                        <!-- CNPJ -->
                        <div class="mb-3">
                            <label asp-for="CNPJ" class="form-label">CNPJ</label>
                            <input asp-for="CNPJ" class="form-control" placeholder="00.000.000/0000-00"
                                   maxlength="18" />
                            <span asp-validation-for="CNPJ" class="text-danger"></span>
                            <small class="text-muted">Formato: 00.000.000/0000-00</small>
                        </div>

                        <!-- Logo URL -->
                        <div class="mb-3">
                            <label asp-for="LogoUrl" class="form-label">URL do Logo</label>
                            <input asp-for="LogoUrl" class="form-control" placeholder="https://exemplo.com/logo.png" />
                            <span asp-validation-for="LogoUrl" class="text-danger"></span>
                            <small class="text-muted">URL da imagem do logo da sua loja</small>
                        </div>

                        <!-- Botões -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="MyStores" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Criar Loja
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Máscara para CNPJ
        document.querySelector('input[name="CNPJ"]')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 14) {
                value = value.replace(/^(\d{2})(\d)/, '$1.$2');
                value = value.replace(/^(\d{2})\.(\d{3})(\d)/, '$1.$2.$3');
                value = value.replace(/\.(\d{3})(\d)/, '.$1/$2');
                value = value.replace(/(\d{4})(\d)/, '$1-$2');
            }
            e.target.value = value;
        });
    </script>
}
