@model ProductDetailViewModel

@{
    ViewData["Title"] = Model.Name;
}

<!-- Breadcrumb para navegação -->
<nav aria-label="breadcrumb" class="mt-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Início</a></li>
        @if (!string.IsNullOrEmpty(Model.CategoryName))
        {
            <li class="breadcrumb-item">@Model.CategoryName</li>
        }
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>

<div class="container my-5">
    <div class="row">
        <!-- Coluna da Imagem -->
        <div class="col-md-6 mb-4">
            <div class="product-detail-image-container">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow" />
                }
                else
                {
                    <div class="product-detail-placeholder">
                        <i class="bi bi-image" style="font-size: 8rem; color: #ccc;"></i>
                    </div>
                }
            </div>
        </div>

        <!-- Coluna das Informações -->
        <div class="col-md-6">
            <!-- Categoria -->
            @if (!string.IsNullOrEmpty(Model.CategoryName))
            {
                <p class="text-muted text-uppercase mb-2">
                    <small>@Model.CategoryName</small>
                </p>
            }

            <!-- Nome do Produto -->
            <h1 class="display-5 fw-bold mb-3">@Model.Name</h1>

            <!-- Avaliações -->
            <div class="mb-3">
                @if (Model.TotalReviews > 0)
                {
                    <div class="d-flex align-items-center">
                        <!-- Estrelas -->
                        <div class="me-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.AverageRating)
                                {
                                    <i class="bi bi-star-fill text-warning"></i>
                                }
                                else if (i - 0.5 <= Model.AverageRating)
                                {
                                    <i class="bi bi-star-half text-warning"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star text-warning"></i>
                                }
                            }
                        </div>
                        <!-- Rating numérico e total de reviews -->
                        <span class="text-muted">
                            <strong>@Model.AverageRating.ToString("0.0")</strong> (@Model.TotalReviews @(Model.TotalReviews == 1 ? "avaliação" : "avaliações"))
                        </span>
                    </div>
                }
                else
                {
                    <p class="text-muted"><small>Nenhuma avaliação ainda</small></p>
                }
            </div>

            <!-- Preço -->
            <div class="mb-4">
                <h2 class="display-4 fw-bold text-success">
                    @Model.Price.ToString("C", new System.Globalization.CultureInfo("pt-BR"))
                </h2>
            </div>

            <!-- Status do Estoque -->
            <div class="mb-4">
                <span class="badge @Model.StockBadgeClass fs-6 py-2 px-3">
                    @Model.StockMessage
                </span>
            </div>

            <!-- Descrição -->
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="mb-4">
                    <h5 class="fw-bold mb-3">Descrição</h5>
                    <p class="text-muted">@Model.Description</p>
                </div>
            }

            <!-- Botão Adicionar ao Carrinho -->
            @if (Model.IsAvailable)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    
                    <!-- Seletor de Quantidade -->
                    <div class="mb-3">
                        <label for="quantity" class="form-label fw-bold">Quantidade</label>
                        <div class="input-group" style="max-width: 150px;">
                            <button class="btn btn-outline-secondary" type="button" onclick="decrementQuantity()">
                                <i class="bi bi-dash"></i>
                            </button>
                            <input type="number" 
                                class="form-control text-center" 
                                id="quantity" 
                                name="quantity" 
                                value="1" 
                                min="1" 
                                max="@Model.Stock"
                                required />
                            <button class="btn btn-outline-secondary" type="button" onclick="incrementQuantity(@Model.Stock)">
                                <i class="bi bi-plus"></i>
                            </button>
                        </div>
                        <small class="text-muted">Máximo: @Model.Stock unidades</small>
                    </div>
                    
                    <!-- Botão Adicionar -->
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-dark btn-lg">
                            <i class="bi bi-cart-plus me-2"></i>
                            Adicionar ao Carrinho
                        </button>
                    </div>
                    
                    @Html.AntiForgeryToken()
                </form>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Este produto está temporariamente indisponível
                </div>
            }

            <!-- Informações da Loja -->
            <div class="card mt-4">
                <div class="card-body">
                    <h6 class="card-title fw-bold mb-3">
                        <i class="bi bi-shop me-2"></i>
                        Vendido por
                    </h6>
                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(Model.StoreLogoUrl))
                        {
                            <img src="@Model.StoreLogoUrl" alt="@Model.StoreName" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;" />
                        }
                        <div>
                            <p class="mb-1 fw-bold">@Model.StoreName</p>
                            @if (Model.StoreTotalReviews > 0)
                            {
                                <small class="text-muted">
                                    <i class="bi bi-star-fill text-warning"></i>
                                    @Model.StoreAverageRating.ToString("0.0") (@Model.StoreTotalReviews avaliações)
                                </small>
                            }
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="#" class="btn btn-outline-dark btn-sm">
                            <i class="bi bi-shop me-1"></i>
                            Visitar Loja
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Seção de Avaliações -->
    @if (Model.RecentReviews.Any())
    {
        <hr class="my-5" />
        
        <div class="row">
            <div class="col-12">
                <h3 class="mb-4">Avaliações de Clientes</h3>
                
                @foreach (var review in Model.RecentReviews)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <!-- Cabeçalho da Review -->
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h6 class="mb-1">@review.Customer.FullName</h6>
                                    <small class="text-muted">
                                        @review.CreatedAt.ToString("dd/MM/yyyy")
                                    </small>
                                    @if (review.IsVerifiedPurchase)
                                    {
                                        <span class="badge bg-success ms-2">
                                            <i class="bi bi-check-circle"></i> Compra verificada
                                        </span>
                                    }
                                </div>
                                <!-- Estrelas da review -->
                                <div>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= review.Rating)
                                        {
                                            <i class="bi bi-star-fill text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star text-warning"></i>
                                        }
                                    }
                                </div>
                            </div>
                            
                            <!-- Título da Review -->
                            @if (!string.IsNullOrEmpty(review.Title))
                            {
                                <h6 class="fw-bold mb-2">@review.Title</h6>
                            }
                            
                            <!-- Comentário -->
                            <p class="mb-0">@review.Comment</p>
                        </div>
                    </div>
                }
                
                <!-- Link para ver todas as avaliações -->
                @if (Model.TotalReviews > 5)
                {
                    <div class="text-center mt-4">
                        <a href="#" class="btn btn-outline-dark">
                            Ver todas as @Model.TotalReviews avaliações
                        </a>
                    </div>
                }
            </div>
        </div>
    }
</div>


@section Styles {
    <link rel="stylesheet" href="~/css/product-details.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/product-details.js" asp-append-version="true"></script>
}