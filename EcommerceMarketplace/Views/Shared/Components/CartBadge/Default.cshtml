@model int

@*
    View do ViewComponent CartBadge.
    Recebe um n√∫mero inteiro que representa a quantidade de itens no carrinho.
*@

<a asp-controller="Cart" asp-action="Index" class="btn btn-outline-dark me-2 position-relative">
    <i class="bi bi-cart3"></i>
    @if (Model > 0)
    {
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
            @(Model > 99 ? "99+" : Model.ToString())
            <span class="visually-hidden">@Model itens no carrinho</span>
        </span>
    }
</a>